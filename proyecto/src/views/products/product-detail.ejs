                </section>
                <section class="mt-5">
                    <h2 class="title-section">Productos similares</h2>
                    <!-- Guarde codigo productos similares en mis notas-->
                    <div class="similar-products">
                        <% if (productos) { %>                        
                            <% for( let i = 0; i < productos.length; i++ ) { %>
                                <article class="section-item pointer">
